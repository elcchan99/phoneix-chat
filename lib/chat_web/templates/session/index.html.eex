<section class="phx-hero">
  <h2>Fill in your name</h2>

  <%= form_for @conn, Routes.session_path(@conn, :create), [method: :post, class: "form-login"], fn f -> %>

    <div class="form-group">
      <label>
        <%= text_input f, :name, placeholder: "Your Name"%>
      </label>
      <%= submit "Login" %>
    </div>
  <% end %>
</section>
